<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="@dimen/left_right_margin"
        android:layout_marginRight="@dimen/left_right_margin"
        android:layout_marginTop="@dimen/item_gap"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_eshop"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:background="@drawable/boarder_around"
            android:contentDescription="@string/image_shop"
            android:scaleType="fitXY"
            android:src="@drawable/image_placeholder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_eshop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="0dp"
                    android:lines="2"
                    android:text="@string/lorem_ipsum"
                    android:textSize="@dimen/textsize"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tv_eshop_short_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="@string/lorem_ipsum"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/oldPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="3dp"
                            android:text="@string/placeholder_price"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/placeholder_price"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llFirstOption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="8dp"
                        android:orientation="vertical"
                        android:paddingBottom="0dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="6dp"
                        android:paddingTop="8dp"
                        android:visibility="gone" >

                        <include layout="@layout/cart_menu_layout" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSecondOption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="8dp"
                        android:orientation="vertical"
                        android:paddingBottom="0dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="6dp"
                        android:paddingTop="8dp"
                        android:visibility="gone" >

                        <include layout="@layout/cart_menu_layout" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvOptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="8dp"
                        android:text="Reward Points 50"
                        android:textAlignment="center"
                        android:textColor="#595959"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvRewardsPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="8dp"
                        android:text="50 Reward Points"
                        android:textAlignment="center"
                        android:textSize="13sp" />
 				<LinearLayout
                        android:id="@+id/llPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                         >
                    <TextView
                        android:id="@+id/tvOldPriceDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="price"
                        android:textAlignment="center"
                        android:textSize="13sp" />
                     <TextView
                        android:id="@+id/tvNewPriceDetails"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_height="wrap_content"
                        android:text="price"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_right_margin"
        android:layout_marginRight="@dimen/left_right_margin" >

        <TextView
            android:id="@+id/tvGiftMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="fwwef"
            android:textAlignment="center"
            android:textColor="#38610B"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/devider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/item_gap"
        android:background="@color/light_gray" >
    </View>

</LinearLayout>