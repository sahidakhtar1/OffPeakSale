<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/tourBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/tour_bg" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/howItWorks"
        android:scaleType="fitXY"
        android:src="@drawable/app_logo" />

    <TextView
        android:id="@+id/howItWorks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:text="How it Works? "
        android:textColor="#ffffff"
        android:textSize="@dimen/tour_title_textsize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/howItWorks"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:gravity="center"
        android:text="Filter a restaurant as per your desired location and cuisine with your matching time slots for morning, afternoon and night"
        android:textColor="#ffffff"
        android:textSize="@dimen/tour_detail_textsize" >
    </TextView>

</RelativeLayout>