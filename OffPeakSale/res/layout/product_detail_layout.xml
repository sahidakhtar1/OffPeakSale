<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.appsauthority.appwiz.utils.ResponsiveScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rlBannerlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:minHeight="200dp" >

                <ImageView
                    android:id="@+id/iv_eshop_detail_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/product_detail_height"
                    android:contentDescription="@string/detail_image"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_placeholder"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvQtyIndicator"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/black_translucent"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:text="Sold Out"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/item_indicator_textsize" />

                <ToggleButton
                    android:id="@+id/favToggle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@id/tvQtyIndicator"
                    android:background="@drawable/heart_toggle_drawable"
                    android:focusable="false"
                    android:textOff=""
                    android:textOn=""
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvSaleIndicator"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/bg_sale_color"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:text="Hot Deal"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/item_indicator_textsize" />

                <LinearLayout
                    android:id="@+id/llDiscountInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/left_right_margin"
                        android:layout_marginRight="@dimen/left_right_margin" >

                        <include layout="@layout/layout_discount" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/left_right_margin"
                android:paddingRight="@dimen/left_right_margin" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_eshop_detail_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lorem_ipsum"
                        android:textSize="@dimen/textsize"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_eshop_detail_short_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="0dp"
                        android:paddingTop="10dp"
                        android:text="@string/lorem_ipsum"
                        android:textColor="@color/product_title_color"
                        android:textSize="@dimen/item_title_textsize" />

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="7dp"
                        android:maxLines="1"
                        android:text="2.1KM"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/item_indicator_textsize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:visibility="visible" >

                    <RelativeLayout
                        android:id="@+id/relStrike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tv_eshop_old_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:text="@string/placeholder_price"
                            android:textColor="@color/old_price_color"
                            android:textSize="@dimen/old_price_textsize"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivStrike"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_centerInParent="true"
                            android:background="@android:color/white" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_eshop_new_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder_price"
                        android:textSize="@dimen/new_price_textsize"
                        android:textColor="@color/product_title_color"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/llLocattion"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="0dp"
                        android:layout_marginRight="0dp"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/locate_us" />

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="3 Temasek Avenue"
                            android:textColor="@color/old_price_color"
                            android:textSize="@dimen/location_textsize" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvRewardsPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="0 Reward Points"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:textSize="@dimen/cart_menu_textsize" />

                <LinearLayout
                    android:id="@+id/ratingLL"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical" >

                        <include layout="@layout/rating_bar" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:orientation="horizontal" />

                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:onClick="submitPressed"
                        android:text="@string/rate_item"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFirstOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:visibility="gone" >

                    <include layout="@layout/menu_layout" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSecondOptionOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:visibility="gone" >

                    <include layout="@layout/menu_layout" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="2dp" 
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:id="@+id/relProductDet"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="6dp" >

                        <View
                            android:id="@+id/list_left1"
                            android:layout_width="8dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:visibility="gone" />

                        <View
                            android:id="@+id/list_bot1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider_color"
                            android:layout_alignParentBottom="true" />

                        <TextView
                            android:id="@+id/eshop_product_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/product_title_color"
                            android:text="@string/product_details"
                            android:textSize="@dimen/detail_section_header_textsize"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_product_detail_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/old_price_color"
                        android:text="@string/lorem_ipsum"
                        android:textSize="@dimen/detail_section_header_textsize" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="66dp" />
        </LinearLayout>
    </com.appsauthority.appwiz.utils.ResponsiveScrollView>

</LinearLayout>