<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/left_right_margin"
    android:paddingRight="@dimen/left_right_margin" >

    <com.appsauthority.appwiz.utils.ResponsiveScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relProductHowItWorks"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp" >

                <View
                    android:id="@+id/list_left2"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:visibility="gone" />

                <View
                    android:id="@+id/list_bot2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true" />

                <TextView
                    android:id="@+id/textView_eshop_product_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:text="@string/how_it_works"
                    android:textSize="@dimen/detail_section_header_textsize"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_how_it_works_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/lorem_ipsum"
                android:textSize="@dimen/detail_section_header_textsize" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="66dp" />
        </LinearLayout>
    </com.appsauthority.appwiz.utils.ResponsiveScrollView>

</LinearLayout>